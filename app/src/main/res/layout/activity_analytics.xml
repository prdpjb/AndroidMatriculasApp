<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/totalPlatesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/todayPlatesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/totalPlatesTextView"/>

    <TextView
        android:id="@+id/mostFrequentPlatesTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/todayPlatesTextView"
        app:layout_constraintBottom_toTopOf="@id/shareReportButton"/>

    <Button
        android:id="@+id/shareReportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compartilhar RelatÃ³rio"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
